// This is not your diaper.

* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    text-rendering: optimizeLegibility;
    word-wrap: break-word;
}

.js-hidden, .hidden {
    display: none;
}

noscript {
    background: $salt-flat-white;
    display: table;
    height: 100%;
    position: absolute;
    width: 100%;
    z-index: 10000;

    p {
        background: url(../img/pretty/marketplace_logo.png) 50% 48% no-repeat;
        background-size: auto 60px;
        display: table-cell;
        font-weight: bold;
        height: 100%;
        padding-top: 60px;
        text-align: center;
        vertical-align: middle;
    }
}

a {
    text-decoration: none;
    color: $sailor-blue;

    &:hover {
        text-decoration: underline;
    }
}

body {
    background: $seavan-salt-white;
    color: $castle-skull-gray;
    // min-height needed so ff b2g/android can scroll to 0 (bug 872622).
    min-height: 300px;
    overflow-x: hidden;
}

#site-header, #page {
    min-width: 320px;

    section.main {
        margin-left: auto;
        margin-right: auto;

        &:after {
            content: '';
            display: block;
            clear: both;
        }
        &.full {
            width: 100%;

            > div {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }
}

#page {
    position: relative;

    > .overlay {
        max-width: 100%;
    }
}

.alert {
    background: $swiss-cheese-yellow;
    border: 1px solid $pineapple-yellow;
    border-radius: 10px;
    margin-bottom: 10px;
    padding: 10px;

    h1 {
        font-size: 1.1em;
        font-weight: bold;
        margin: 0;
    }
}

.row {
    clear: both;
    padding: 1em 0;
    width: 100%;

    > * {
        display: block;
        float: left;
    }

    > :last-child {
        clear: right;
    }

    &.gutter {
        padding: 1em;

        > *:not(:last-child) {
            padding-right: 1em;
        }
    }

    .full {width: 100%;}
    .half {width: 50%;}
    .third {width: 33.333%;}
    .two-thirds {width: 66.666%;}
    .quarter {width: 25%;}
}

.well, section.group {
    background: #fff;
    box-shadow: 0 1px 1px $cement-gray;
    border-radius: 10px;
    margin-bottom: 15px;
    padding: 15px;
}

span.label {
    border-radius: 0.25em;
    color: #fff;
    display: inline-block;
    line-height: 1em;
    margin-right: 0.5em;
    padding: 0.25em 0.5em;
    text-shadow: 0 0 3px #000;
}

section.group {
    overflow: hidden;
    padding: 0;

    h1, h2, h3 {
        background: $refreshing-white;
        border-bottom: 1px solid $seavan-salt-white;
        font-size: 1em;
        margin-bottom: 10px;
        padding-top: 0.5em;
        padding-bottom: 0.5em;
    }

    > * {
        padding-left: 1em;
        padding-right: 1em;
    }

    > p {
        margin-bottom: 1em;
    }
}

.detailed-error, .fragment-error {
    background: #fff;
    display: block;
    padding: 15px;

    b {
        display: block;
    }
}

main {
    margin: 0 auto;
    max-width: 1024px;
}

.main {
    margin: 0 auto;
    .fragment-error {
        padding: 0;
    }
}

.two-up {
    width: 50%;
    float: left;

    &:nth-child(2n+1) {
        padding: 0 5px 0 0;
    }
    &:nth-child(2n) {
        padding: 0 0 0 5px;
    }
    .button {
        display: block;
    }
}


.only-logged-in,
.logged-in .only-logged-out,
.only-rocketfuel-disabled {
    display: none !important;
}

.only-logged-out,
.logged-in .only-logged-in,
.rocketfuel-disabled .only-rocketfuel-disabled {
    display: block !important;
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

@-webkit-keyframes spin {
    from { -webkit-transform: rotate(0turn); }
    to { -webkit-transform: rotate(1turn); }
}
@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

@media $at-least-desktop {
    html, #footer {
        background: #fff;
    }

    #footer,
    #directory-footer {
        padding: 48px 0;
        ul {
            list-style: none;
        }
    }

    #directory-footer {
        border-top: 1px dashed #000;
        font-size: 14px;
        line-height: 18px;
        .links a {
            margin-top: 8px;
            + a {
                margin-top: 10px;
            }
        }
        .devhub {
            width: 290px;
            // TODO: Get Michael to vectorize this as an SVG.
            &:before {
                background: url(../img/pretty/rocket.png) 0 50% no-repeat;
                background-size: 20px auto;
                content: "";
                display: inline-block;
                height: 100%;
                vertical-align: top;
                width: 28px;
            }
        }
        .group {
            float: left;
            min-height: 48px;
            position: relative;
            a {
                display: block;
            }
            + .group {
                padding-left: 68px;
                max-width: 200px;
            }
        }
    }

    #page .main,
    .main {
        max-width: $desktop-content;
    }

    .container {
        &.product-details,
        &.results {
            margin: 50px 0;
        }
        &.prose,
        &.form-grid {
            padding: 25px;
        }
    }

    #directory-footer .group a.region {
        background-repeat: no-repeat;
        background-size: 20px auto;
        margin-top: 6px;
        min-height: 20px;
        overflow: visible;
        padding: 2px 0 0 28px;
        text-overflow: normal;
    }

    #footzilla {
        background: url(../img/logos/footzilla.png) 0 3px no-repeat;
        float: left;
        width: 100px;
        a {
            display: block;
            height: 26px;
            hidetext();
            width: 80px;
        }
    }

    #footer {
        color: $note-gray;
        overflow: hidden;
        padding: 30px 0;
        width: 100%;
        .pad {
            margin: 0 auto;
            padding: 0;
            width: $desktop-ftr;
        }
        p, ul {
            border-left: 1px dotted $light-gray;
            font-size: 11px;
            line-height: 1.3;
            margin: 0;
            padding-left: 1em;
        }
        p {
            float: left;
            width: 60%;
        }
        ul {
            float: right;
            line-height: 1.2;
            width: 20%;
            a {
                display: block;
            }
        }
        li + li {
            margin-top: 2px;
        }
    }

    #site-footer {
        display: block;
    }

    .newsletter {
        display: none;
    }

    @media $retina {
        #footzilla {
            background-image: url(../img/logos/footzilla-2x.png);
            background-size: 81px auto;
        }
    }
} // End of Desktop.

@media $retina {
    .spinner {
        spinner-base-image('retina');
        &.alt {
            spinner-alt-image('retina');
        }
    }
}
